extends ./layouts/common
block content
  .container
    h3 Update book title
    form(action="/books/update/" + book.id, method="POST", class="form-inline d-flex align-items-start")
      .form-group
        input(type="text", placeholder="title", value=book.title, name="title" class="form-control mb-2")
      button(type="submit" class="btn btn-primary ml-2") Update