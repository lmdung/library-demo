html
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
    link(rel='shortcut icon' type='image/x-icon' href='https://cdn.glitch.com/b14b89f8-e7d8-4e75-89c9-9673fc42e13b%2Ffavicon.ico?v=1591843221324')
    link(rel="stylesheet" href="/custom.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light(style="background-color: #E0FBFC;")
      a.navbar-brand(href='#') MyWeb
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul(class="navbar-nav")
          li(class="nav-item")
            a(class="nav-link" href="/") Home
          li(class="nav-item")
            a(class="nav-link" href="/books") Books
          li(class="nav-item")
            a(class="nav-link" href="/users") Users
          li(class="nav-item")
            a(class="nav-link" href="/transaction") Transactions
          li(class="nav-item")
          a(class="nav-link" href="/shop") My Shop
          li(class="nav-item")
            a(class="nav-link position-relative" href="/cart")
              i(class="fas fa-shopping-cart fa-lg")
              if countCart
                .count
                  span=countCart
      if userLogin
        p.mb-0= userLogin.name
        if userLogin.avatar
          img.pl-2(src=userLogin.avatar, style="width: 45px; border-radius: 50%")
    .container.pt-5
      block content