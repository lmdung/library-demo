extends ../layouts/common
block content
  .container
    .headerShop
      if !shop
        h3 Cửa hàng không tồn tại ! 
           a(href="/", class="btn btn-primary ml-3") Home
      else 
        h2.text-primary Welcome to
          span.pl-2=shop.name
      if books
        table.table.table-bordered.mt-5
          thead
            tr
              th(scope='col') Book
              th(scope='col') Description
              th(scope='col') Book Cover
              th(scope='col') Add to cart
          tbody
          each book, index in books
            tr
              td=book.title
              td=book.description
              if book.bookCoverUrl 
                td
                  img(src=book.bookCoverUrl style="width: 40px;")
              else 
                td
                  img(src='https://cdn.glitch.com/6553f78d-3d9d-4d44-94db-46ae68d9c495%2FbookDetail.jpg?v=1592970426313' ,style="width: 40px")
              td
                a(href="#")
                  i(class="fas fa-cart-plus", style="color: green")
      else 
        h3 Cửa hàng không có cuốn sách nào cả :(
                      